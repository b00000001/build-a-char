<form class="columns mt-5 is-8 is-variable is-centered is-multiline">
  <div class="column is-5-desktop p-5">
    <div class="field is-horizontal">
      <div class="field-label is-large">
        <label class="label">Name:</label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <input class="input is-normal mt-3" type="text" id="CharaName" placeholder="Please enter your name here">
          </div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label is-large">
        <label class="label">Race:</label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <input class="input is-normal mt-3" type="text" id="CharaRace" placeholder="Please enter your race here">
          </div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label is-large">
        <label class="label">Gender:</label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <input class="input is-normal mt-3" type="text" id="CharaGender"
              placeholder="Please enter your gender here">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="column is-5-desktop p-5">
    <div class="field is-horizontal">
      <div class="field-label is-large">
        <label class="label">Class:</label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <div class="select">
              <select id="CharaClass">
                <option>Warrior</option>
                <option>Mage</option>
                <option>Priest</option>
                <option>Rogue</option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <div class="field is-horizontal">
        <div class="field-label is-large">
          <label class="label">HP:</label>
        </div>
      </div>
      <div class="field is-horizontal">
        <div class="field-label is-large">
          <label class="label">MP:</label>
        </div>
      </div>
    </div>
  </div>
</form>

<form class="columns mt-5 is-8 is-variable is-centered is-multiline p-5 m-1">
  <div class="column is-5-desktop p-5">
    <div class="card">
      <div class="media-content">
        <h2 class="title is-4 is-size-2 p-5">Stats:</h2>
      </div>
      <div class="media-content">
        <h2 class="title is-4 is-size-4 p-5">Strength:</h2>
      </div>
      <div class="media-content">
        <h2 class="title is-4 is-size-4 p-5">Dexterity:</h2>
      </div>
      <div class="media-content">
        <h2 class="title is-4 is-size-4 p-5">Intelligence:</h2>
      </div>
      <div class="media-content">
        <h2 class="title is-4 is-size-4 p-5">Charisma:</h2>
      </div>
      <div class="media-content">
        <h2 class="title is-4 is-size-4 p-5">Constitution:</h2>
      </div>
    </div>
  </div>
  <form class="columns mt-5 is-8 is-variable is-centered is-multiline p-5 m-2">
    <div class="column is-5-desktop p-5">
      <div class="card">
        <div class="media-content">
          <h2 class="title is-4 is-size-2 p-5">Skills:</h2>
        </div>
        <div class="media-content">
          <h2 class="title is-4 is-size-2 p-5">1:</h2>
        </div>
        <div class="media-content">
          <h2 class="title is-4 is-size-2 p-5">2:</h2>
        </div>
        <div class="media-content">
          <h2 class="title is-4 is-size-2 p-5">3:</h2>
        </div>
        <div class="media-content">
          <h2 class="title is-4 is-size-2 p-5">4:</h2>
        </div>
      </div>
    </div>
  </form>

  <div class="column is-2-desktop p-5">
    <div class="has-text-centered p-5">
      <button class="button is-medium p-5 is-rounded is-info" id="createCharacter">Submit</button>
    </div>
  </div>
</form>

<script src="/js/create.js"></script>